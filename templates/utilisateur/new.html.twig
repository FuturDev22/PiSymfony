{% extends 'baseBack.html.twig' %}

{% block title %}New Utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center">
            <h1>update</h1>
            <div class="col-lg-6 ">
                {{ form_start(form,{'attr': {'novalidate': 'novalidate','class':''}} ) }}
                <div class="row gy-4 ">

                    <div class="col-md-12">
                        {{ form_errors(form.nom) }}
                        {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'Your Name'}}) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'email'}}) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_errors(form.telephone) }}
                        {{ form_widget(form.telephone,{'attr':{'class':'form-control','placeholder':'phone number'}}) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_errors(form.password) }}
                        {{ form_widget(form.password,{'attr':{'class':'form-control','placeholder':'Password'}}) }}
                    </div>

                    <div class="col-md-12">
                        {{ form_errors(form.roles) }}
                        {{ form_widget(form.roles,{'attr':{'class':'form-control','placeholder':'Usertype'}}) }}
                    </div>
                    <div class="col-md-12">
                        <p> is Bloked</p>
                        {{ form_errors(form.isBlocked) }}
                        {{ form_widget(form.isBlocked,{'attr':{'class':'','placeholder':'Usertype'}}) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_errors(form.solde) }}
                        {{ form_widget(form.solde,{'attr':{'class':'form-control','placeholder':'solde'}}) }}
                    </div>

                    <button class="btn btn-primary">{{ button_label|default('ajouter') }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <a href="{{ path('app_utilisateur_index') }}">back to list</a>
{% endblock %}
