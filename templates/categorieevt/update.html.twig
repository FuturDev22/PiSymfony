{% extends 'base.html.twig' %}
{% block body %}

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Modification <a href="{{ path('listCategories') }}" class="btn btn-primary"><i class="bi bi-box-arrow-left"></i></a> </h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Evénements</li>
          <li class="breadcrumb-item active">Modifier Catégorie</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-9">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Modification</h5>
                  {{ form_start(formcat,{attr:{novalidate:'novalidate'}}) }}
              <!-- General Form Elements -->
              <form>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Nom</label>
                  <div class="col-sm-10">
                        {{ form_widget(formcat.nomCategorie , {'attr': {'class': 'form-control' , 'placeholder' : 'nom'}} ) }}
                       {{ form_errors(formcat.nomCategorie) }}
                  </div>
                </div>

                
                  <div class="d-grid gap-2 mt-3">
                {{ form_widget(formcat) }}
                  <button type="submitType" class="btn btn-primary">Modifier</button>
                 
                </div>
               
            
              {{ form_end(formcat) }}

              </form><!-- End General Form Elements -->

            </div>
          </div>

        </div>

        
    </section>

  </main><!-- End #main -->
  {% endblock %}
