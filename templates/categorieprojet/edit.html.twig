{% extends 'base.html.twig' %}

{% block title %}Edit Categorieprojet{% endblock %}

{% block body %}
    <h1>Modifier la Catégorie du projet </h1>

    <div style="display: flex;align-items: center;justify-content: center;margin-top: 125px;padding:10px">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Modifier la Catégorie du projet</h5>

                <!-- General Form Elements -->
                {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Nom de la Catégorie </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nom_CategorieProjet,{'attr':{'class': 'form-control'}}) }}

                    </div>
                    {{ form_errors(form.nom_CategorieProjet,{'attr':{'class': 'text-danger'}}) }}
                </div>

                <br/>
                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                    {{ form_widget(form.modifier,{'attr':{'class':'btn btn-primary'}}) }}
                </div>
                {{ form_end(form)}}

            </div>
        </div>

    </div>




    {{ include('categorieprojet/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_categorieprojet_index') }}">back to list</a>

    {{ include('categorieprojet/_delete_form.html.twig') }}
{% endblock %}
