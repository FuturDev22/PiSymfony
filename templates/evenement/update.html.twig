{% extends 'base.html.twig' %}
{% block body %}

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Modification <a href="{{ path('listEvenement') }}" class="btn btn-primary"><i class="bi bi-box-arrow-left"></i></a> </h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Evénements</li>
          <li class="breadcrumb-item active">Modifier événement</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-9">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Modifier événement</h5>
                  {{ form_start(formevt) }}
              <!-- General Form Elements -->
              <form>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Titre</label>
                  <div class="col-sm-10">
                        {{ form_widget(formevt.nomEvt , {'attr': {'class': 'form-control' , 'placeholder' : 'titre'}} ) }}
                       {{ form_errors(formevt.nomEvt) }}
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputEmail" class="col-sm-2 col-form-label">Description</label>
                  <div class="col-sm-10">
                   {{ form_widget(formevt.descriptionEvt , {'attr': {'class': 'form-control' , 'placeholder' : 'description'}} ) }}
                   {{ form_errors(formevt.descriptionEvt) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputPassword" class="col-sm-2 col-form-label">Date</label>
                  <div class="col-sm-10">
                       {{ form_widget(formevt.dateEvt , {'attr': {'class': 'form-control' , 'placeholder' : 'date'}} ) }}
                   {{ form_errors(formevt.dateEvt) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-2 col-form-label">Heure</label>
                  <div class="col-sm-10">
                    {{ form_widget(formevt.heureEvt , {'attr': {'class': 'form-control' , 'placeholder' : 'heure'}} ) }}
                   {{ form_errors(formevt.heureEvt) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-2 col-form-label">Lieu</label>
                  <div class="col-sm-10">
                      {{ form_widget(formevt.lieuEvt , {'attr': {'class': 'form-control' , 'placeholder' : 'lieu'}} ) }}
                   {{ form_errors(formevt.lieuEvt) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputDate" class="col-sm-2 col-form-label">Responsable</label>
                  <div class="col-sm-10">
                 {{ form_widget(formevt.responsable , {'attr': {'class': 'form-control' , 'placeholder' : 'email','type':'date'}} ) }}
                   {{ form_errors(formevt.responsable) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputTime" class="col-sm-2 col-form-label">Places</label>
                  <div class="col-sm-10">
                   {{ form_widget(formevt.places , {'attr': {'class': 'form-control' , 'placeholder' : 'places'}} ) }}
                   {{ form_errors(formevt.places ) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputTime" class="col-sm-2 col-form-label">Catégorie</label>
                  <div class="col-sm-10">
                   {{ form_widget(formevt.categorie, {'attr': {'class': 'form-control' , 'placeholder' : 'Catégorie'}} ) }}
                   {{ form_errors(formevt.categorie) }}
                  </div>
                </div>
                  <div class="d-grid gap-2 mt-3">
                {{ form_widget(formevt) }}
                  <button type="submitType" class="btn btn-primary">Modifier</button>
                 
                </div>
               
            
              {{ form_end(formevt) }}

              </form><!-- End General Form Elements -->

            </div>
          </div>

        </div>

        
    </section>

  </main><!-- End #main -->
  {% endblock %}
