 
 {% extends 'base.html.twig' %}


{% block body %}
  
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Liste des événements</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Evénements</li>
          <li class="breadcrumb-item active">Affichage</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Affichage des événements <span class="badge rounded-pill " style="color:white;background-color:#87CEFA;">Nombre des événements: {{ tabevt|length }}</span> </h5>
              <a href="{{ path('ajouter') }}"  class="btn btn-primary"><i class="bi bi-plus-circle"></i> Nouveau événement</a> 
                <a href="{{ path('pdf') }}" class="btn btn-primary"><i class="bi bi-printer"></i></a>
                <a href="{{ path('calendrier') }}" class="btn btn-primary"><i class="bi bi-calendar"></i></a>
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Date</th>
                    <th scope="col">Heure</th>
                    <th scope="col">Lieu</th>
                    <th scope="col">Responsable</th>
                    <th scope="col">Places</th>
                    <th scope="col">Catégorie</th>
                   
                    <th>Actions</th>
                  
                  </tr>
                </thead>
                <tbody>
                {% for e in tabevt %}
                  <tr>
                    <th scope="row">{{ e.id}}</th>
                    <td>{{ e.getNomEvt}}</td>
                    <td>{{ e.getDescriptionEvt }}</td>
                    <td>{{ e.getDateEvt|date('d-m-Y')}}</td>
                    <td>{{ e.getHeureEvt|date('H:m:s') }}</td>
                    <td>{{ e.getLieuEvt }}</td>
                    <td>{{ e.getResponsable }}</td>
                    <td>{{  e.getPlaces }}</td>
                    <td>{{  e.getCategorie.getNomCategorie}}</td>
               
                    <td>
               <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                <a href="{{ path('Adetails',{'id':e.id}) }}" class="btn btn-warning"><i class="bi bi-card-heading"></i></a>
               <a href="{{ path('updateEvt',{'idEvt':e.id}) }}" class="btn btn-success"><i class="bi bi-pencil"></i></a>
               <a href="{{ path('suppEvt',{'idEvt':e.id}) }}" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
              </div>

                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->


{% endblock %}



  