{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <h1>Projet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Nom_projet</th>
                <td>{{ projet.nomProjet }}</td>
            </tr>
            <tr>
                <th>CategorieProj</th>
                <td>{{ projet.categorieProj }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ projet.dateDebut ? projet.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ projet.dateFin ? projet.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Montant_demandee</th>
                <td>{{ projet.montantDemandee }}</td>
            </tr>
            <tr>
                <th>Montant_collecte</th>
                <td>{{ projet.montantCollecte }}</td>
            </tr>
            <tr>
                <th>Etat_projet</th>
                <td>{{ projet.etatProjet }}</td>
            </tr>
        </tbody>
    </table>

     <a class="btn bg-purple btn-flat"  href="{{ path('app_projet_index') }}"><i class="fa fa-fw fa-arrow-left"></i>back to list</a>

    <a href="{{ path('app_projet_edit', {'id': projet.id}) }}">Modifier</a>
     <a href="{{ path('app_projet_delete', {'id': projet.id}) }}">Supprimer</a>
    {{ include('projet/_delete_form.html.twig') }}
{% endblock %}
