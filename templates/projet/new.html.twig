{% extends 'base.html.twig' %}

{% block title %}New Projet{% endblock %}

{% block body %}
    <h1>Create new Projet</h1>

    <div style="display: flex;align-items: center;justify-content: center;margin-top: 125px;padding:10px">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ajouter Un projet d'investissement</h5>

                <!-- General Form Elements -->
               {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-4 col-form-label">Nom du projet </label>
                        <div class="col-sm-10">
                            {{ form_widget(form.nom_projet,{'attr':{'class': 'form-control'}}) }}

                        </div>
                        {{ form_errors(form.nom_projet,{'attr':{'class': 'text-danger'}}) }}
                    </div>
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">Image Upload</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="file" id="formFile">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Categorie du projet </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.categorieProj,{'attr':{'class': 'form-control'}}) }}

                    </div>
                    {{ form_errors(form.categorieProj,{'attr':{'class': 'text-danger'}}) }}
                </div>
                <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" style="height: 100px"></textarea>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Date debut</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.date_debut,{'attr':{'class': 'form-control'}}) }}

                    </div>
                    {{ form_errors(form.date_debut,{'attr':{'class': 'text-danger'}}) }}
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Date fin</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.date_fin,{'attr':{'class': 'form-control'}}) }}

                    </div>
                    {{ form_errors(form.date_fin,{'attr':{'class': 'text-danger'}}) }}
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">montant demandé</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.montant_demandee,{'attr':{'class': 'form-control'}}) }}

                    </div>
                    {{ form_errors(form.montant_demandee,{'attr':{'class': 'text-danger'}}) }}
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">montant collecté</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.montant_collecte,{'attr':{'class': 'form-control'}}) }}

                    </div>
                    {{ form_errors(form.montant_collecte,{'attr':{'class': 'text-danger'}}) }}
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Etat de projet</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.etat_projet,{'attr':{'class': 'form-control'}}) }}

                    </div>
                    {{ form_errors(form.etat_projet,{'attr':{'class': 'text-danger'}}) }}
                </div>
                <br/>
                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                    {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                </div>
                {{ form_end(form)}}

            </div>
        </div>

    </div>

    {{ include('projet/_form.html.twig') }}

    <a href="{{ path('app_projet_index') }}">back to list</a>
{% endblock %}
