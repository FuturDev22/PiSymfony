{% extends 'base.html.twig' %}

{% block title %}Edit Projet{% endblock %}

{% block body %}
    <h1>Modifier un Projet d'investissement</h1>

    <div style="display: flex;align-items: center;justify-content: center;margin-top: 125px;padding:10px">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Modifier Un projet d'investissement</h5>

                <!-- General Form Elements -->
                {{ form_start(form) }}
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Nom du projet </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nom_projet,{'attr':{'class': 'form-control'}}) }}

                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Categorie du projet </label>
                    <div class="col-sm-10">
                        {{ form_widget(form.categorieProj,{'attr':{'class': 'form-control'}}) }}

                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Date debut</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.date_debut,{'attr':{'class': 'form-control'}}) }}

                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Date fin</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.date_fin,{'attr':{'class': 'form-control'}}) }}

                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">montant demandé</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.montant_demandee,{'attr':{'class': 'form-control'}}) }}

                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">montant collecté</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.montant_collecte,{'attr':{'class': 'form-control'}}) }}

                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-4 col-form-label">Etat de projet</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.etat_projet,{'attr':{'class': 'form-control'}}) }}

                    </div>
                </div>
                <br/>
                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                    {{ form_widget(form.modifier,{'attr':{'class':'btn btn-primary'}}) }}
                </div>
                {{ form_end(form)}}

            </div>
        </div>

    </div>

    {{ include('projet/_form.html.twig') }}

    <a href="{{ path('app_projet_index') }}">back to list</a>


    {{ include('projet/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_projet_index') }}">back to list</a>

    {{ include('projet/_delete_form.html.twig') }}
{% endblock %}
