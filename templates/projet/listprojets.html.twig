{% block body %}
    <h1 align="center">Liste des Projets</h1><hr>

                    <!-- Table with stripped rows -->

                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom_projet</th>
                            <th>CategorieProj</th>
                            <th>Date_debut</th>
                            <th>Date_fin</th>
                            <th>Montant_demandee</th>
                            <th>Montant_collecte</th>
                            <th>Etat_projet</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for projet in projets %}
                            <tr>
                                <td>{{ projet.id }}</td>
                                <td>{{ projet.nomProjet }}</td>
                                <td>{{ projet.categorieProj }}</td>
                                <td>{{ projet.dateDebut ? projet.dateDebut|date('Y-m-d') : '' }}</td>
                                <td>{{ projet.dateFin ? projet.dateFin|date('Y-m-d') : '' }}</td>
                                <td>{{ projet.montantDemandee }}</td>
                                <td>{{ projet.montantCollecte }}</td>
                                <td>{{ projet.etatProjet }}</td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                    <!-- End small tables -->

{% endblock %}
