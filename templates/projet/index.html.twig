{% extends 'base.html.twig' %}

{% block title %}Projet à investir{% endblock %}

{% block body %}
    <h1>Projet à investir</h1>
<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">

    <div class="col-lg-7">

        <div class="card">
            <div class="card-body">
                <a href="{{ path('app_projet_new') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>
                <h5 class="card-title">Liste des Projets à investir </h5>

                <!-- Table with stripped rows -->

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_projet</th>
                <th>CategorieProj</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>Montant_demandee</th>
                <th>Montant_collecte</th>
                <th>Etat_projet</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.nomProjet }}</td>
                <td>{{ projet.categorieProj }}</td>
                <td>{{ projet.dateDebut ? projet.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ projet.dateFin ? projet.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ projet.montantDemandee }}</td>
                <td>{{ projet.montantCollecte }}</td>
                <td>{{ projet.etatProjet }}</td>
                <td>

                    <a class="btn btn-danger" href="{{ path('app_projet_delete', {'id': projet.id}) }}">delete</a>
                    <a class="btn btn-success" href="{{ path('app_projet_edit', {'id': projet.id}) }}">edit</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                <button type="button" class="btn btn-info href="{{ path('projets_list') }}">Imprimer</a></button>
                <!-- End small tables -->

            </div>
        </div>

    </div>



</div>

{% endblock %}
