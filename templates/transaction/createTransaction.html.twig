            </div>


            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Confirmer</label>
                <div class="col-sm-10">
                    {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                </div>
            </div>



            {{ form_end(f) }}

        </div>
    </div>
    </div>

