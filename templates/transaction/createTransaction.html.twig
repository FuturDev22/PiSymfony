            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">emetteur</label>
                <div class="col-sm-10">
                    {{ form_widget(f.emetteur,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(f.emetteur,{'attr':{'class':'text-danger'}}) }}
