                </div>
            </div>

            <div class="row mb-3">
                <label for="inputTime" class="col-sm-2 col-form-label">Heure</label>
                <div class="col-sm-10">
                    {{ form_widget(f.heure,{'att':{'class':'form-control'}}) }}
                    {{ form_errors(f.heure,{'attr':{'class':'text-danger'}}) }}
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">recepteur</label>
                <div class="col-sm-10">
                    {{ form_widget(f.recepteur,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(f.recepteur,{'attr':{'class':'text-danger'}}) }}
