                <div class="col-sm-10">
                    {{ form_widget(f.valeur,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(f.valeur,{'attr':{'class':'text-danger'}}) }}
                </div>
            </div>
            <div class="row mb-3">
