{% extends 'base.html.twig' %}

{% block title %}Contact {% endblock %}

{% block body %}

    <div style="display: flex;align-items: center;justify-content: center;margin-top: 125px;padding:10px; ">
        {%  for message in app.flashes('message') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Informer le client par un nouveau projet</h5>

                <!-- General Form Elements -->
                {{ form_start(contactForm) }}
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-4 col-form-label">Sujet</label>
                        <div class="col-sm-10">
                            {{ form_widget(contactForm.Subject,{'attr':{ 'class': 'form-control'}})}}
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail" class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-10">
                            {{ form_widget(contactForm.email,{'attr':{ 'class': 'form-control'}})}}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="inputTextarea" class="col-sm-4 col-form-label">Message</label>
                        <div class="col-sm-10">
                            {{ form_widget(contactForm.message,{'attr':{ 'class': 'form-control'}})}}
                        </div>
                    </div>







                {{ form_end(contactForm) }}<!-- End General Form Elements -->

            </div>
        </div>

    </div>
