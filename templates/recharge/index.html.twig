{% extends 'base.html.twig' %}

{% block title %}Hello RechargeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div style="display: flex;align-items: center;justify-content: center">
        <table border ="1">
            <thread>
                <th>id</th>
                <th>numSerie</th>
                <th>valeur</th>
                <th>code</th>
                <th>validite</th>
                <th>beneficiaire</th>
            </thread>
            <tbody>
            {% for recharge in r %}
                <tr>
                    <td>{{ recharge.id }}</td>
                    <td>{{ recharge.numSerie }}</td>
                    <td>{{ recharge.valeur }}</td>
                    <td>{{ recharge.code }}</td>
                    <td>{{ recharge.validite}}</td>
                    <td>{{ recharge.beneficiaire }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
</div>
{% endblock %}
